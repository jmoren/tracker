:javascript
  $(function(){
    $('.date').datepicker({
      dateFormat: 'DD, d MM, yy',
      showAnim: 'slideDown',
      changeMonth: true,
      changeYear: true
    });
  })
= form_for @task_list do |f|
  = f.error_messages
  - if @task_list.new_record?
    = f.hidden_field :project_id, :value => @project.id
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :status
    = f.select :status, TaskList::STATUS
  %p
    = f.label :end_date
    = f.text_field :end_date, :size => 20, :class => 'date'
  %p
    = f.label :commnets
    %br
    = f.text_area :comments, :cols => 80, :rows => 5
  %p
    = f.submit
