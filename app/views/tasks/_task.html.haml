.task{:class => "#{task.status} #{task.state == 1 ? 'todo' : task.state == 2 ? 'progress' : 'done'}" }
  .task_description
    .label Description:
    %p= truncate(task.description, :length => 80 )
  .priority
    .label.left{:style => "width: 50px"} Priority:
    .current_state.left
      = task.priority
    .clear
  .task_status
    %div{:class => task.status}
      .label.left{:style => "width: 50px"} Status:
      .current_status.left{:id => "status_#{task.id}"}
        = task.status
    .clear
  .footer
    .links.right
      = link_to 'Destroy', task, :method => :delete, :remote => true, :class => "delete_task"
    .info.left
      = link_to "ID # #{task.id}", task_url(task), :class => 'popup', :rel => "facebox"
    .clear

