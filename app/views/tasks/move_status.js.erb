$('.flash').html("New status: <%= @task.status == 'progress' ? "In progress" : @task.status.titleize %>").show();
$("#<%= @task.status %>").html("<%= escape_javascript(render :partial => 'tasks/tasks', :locals => { :tasks => @tasks , :status => @tasks.first.status}) %>");
$( ".draggable" ).draggable({revert: 'invalid'});
  $( ".droppable" ).droppable({
    greedy: true,
    hoverClass: 'drophover',
    drop: function(ev,el){
      var st = $(this).find('input.status').val();
      var id = $(el.draggable).attr('id');
      $.post('/tasks/status?id=' + id + '&status=' + st, function(){$(el.draggable).remove()});
    }
  });

