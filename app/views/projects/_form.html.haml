#project_form{:style => "width:80%;margin:auto;padding: 10px; border: solid 1px #ccc"}
  %h1 New Project
  = form_for @project do |f|
    = f.error_messages
    .left{:style => "width: 50%"}
      %p
        = f.label :name
        = f.text_field :name
      %p
        = f.label :status
        = f.select :status, TaskList::STATUS
    .right{:style => "width: 50%;"}
      %p
        = f.label :start_date
        = f.date_select :start_date
      %p
        = f.label :end_date
        = f.date_select :end_date
    .clear
    %p
      = f.label :description
      %br
      = f.text_area :description, :rows => 5, :cols => 125
    %p
      = f.submit
