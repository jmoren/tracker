- title "My Projects (#{@projects.size})"
:javascript
  $(function(){
    $('.more_link').click(function(){
      var id = $(this).attr('id')
      $('#project_'+id).slideToggle();
      $(this).toggleClass('minus');
    });
  }); 
#col_right.right
  .button
    = link_to "New Project", new_project_path
  .user_info
    %p
      = image_tag current_user.gravatar_url
    %p
      .username{'original-title' => "<span style='font-size:12px;font-weight:bold'>#{current_user.email}</span>", :class => 'tipsy-e'}
        User:
        = current_user.username
    %p
      = link_to 'Edit Profile', edit_current_user_path
  
#col_left.left
  - @projects.each do |project|
    .project{:class => project.status}
      .links 
        = link_to 'details',"#" , :class => "more_link more", :id => project.id
      .title{ :title => "Status: #{project.status}" }
        = link_to project.name.titleize, project
      .clear
      %p
        .owner
          .left{:style => "margin: 0 5px"}
            = project.is_collaborator?(current_user) ? image_tag('unlock.png', :title => "Eres miembro de este proyecto") : image_tag('lock.png', :title => "no eres parte de este proyecto")
          .left{:style => "margin: 0px 3px"}
            Created by
            = project.user.username  
            on 
            = l project.created_at, :format => '%A, %d %B of %Y'
          .clear  
      .more_info{:style => "display:none", :id => "project_#{project.id}"}
        = simple_format project.description,:class => "text_area"
        .dates
          %em.start
            Start on 
            %strong
              = project.start_date
            and finish on
            %strong
              = project.end_date
        .collaborators
          %h4== Collaborators #{project.collaborators.size}
          %ul
            - project.collaborators.each do |c|
              %li= c.user.username 
      .links
        = link_to image_tag('edit.png', :title => "Edit"), edit_project_path(project)
        = link_to image_tag('trash.png', :title => 'Delete'), project, :confirm => 'Are you sure?', :method => :delete
      .clear
.clear
