- title "Project #{@project.name}"
:javascript
  $(function(){
    $('#tabs').tabs()
  });
#tabs
  %ul
    %li= link_to "Project", "#project"
    %li= link_to "Tasks", "#tasks"
    %li= link_to "Bugs", "#bugs"

  %div{:id => 'project'} 
    %p
      %strong Description:
      = @project.description
    %p
      %strong Start Date:
      =  @project.start_date
      %strong End Date:
      = @project.end_date
    %p
      %strong Status:
      = @project.status
    %p
      %strong User:
      = @project.user_id
  %div{:id => 'tasks'}
    .tab_title 
      %h2 Lista de tareas creadas
    .tab_link_new
      = link_to "New task list", new_project_task_list_path(@project)
    #tasks.list  

  %div{:id => 'bugs'}
    .tab_title
      %h2 Lista de bugs creados
    .tab_link_new
      = link_to "New bug list", new_project_bug_list_path(@project)
    #bugs.list
      
  %p
    = link_to "Edit", edit_project_path(@project)
    |
    = link_to "Destroy", @project, :confirm => 'Are you sure?', :method => :delete
    |
    = link_to "View All", projects_path
