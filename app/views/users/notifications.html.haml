:javascript
  $(function(){
    $('.notification').click(function(){
      $(this).html("<img src='/images/loading.gif' > ");
      $(this).fadeOut();
      // marcar como leido, actualizar el contador de notificaciones.
    }); 
    $('#noti_footer a').click(function(){
      $('#noti_list').hide();
    })
  })
#noti_bar
  Aca van mas cosas
- @notifications.each do |n|
  - a = n.activity.target
  .notification{:id => n.id}
    == #{a.user.username} has #{a.action} a #{a.target_type}  in the project
    = link_to a.target.project.name, a.project
    %div
      %small
        - if a.target_type == "TaskList"
          You can view 
          = link_to "here", a.target
        - if a.target_type == "Task"
          == Task ##{a.target_id}
          == is in 
          = link_to a.target.task_list.title, a.target.task_list
#noti_footer
  = link_to "Close", "#"          
     
